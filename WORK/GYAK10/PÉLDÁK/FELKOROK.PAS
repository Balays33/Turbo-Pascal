program felkorok;
uses crt,graph;
var gd,gm:integer;
    x,y,a,b,r,i,j :integer;

function hatvany(x,y:real):real;
   begin
      hatvany:=exp(y*ln(x));
   end;

begin
 gd:=detect;
 filemode:=0;
 initgraph(gd,gm,'e:\tp\bgi');
 setbkcolor(blue);
 cleardevice;
 x:=319; y:=479; a:=0; b:=180; r:=320;
 setcolor(yellow);
 arc(x,y,a,b,r);
 for i:=1 to 10 do
   begin
     x:=round(x/2); r:=round(r/2);
     for j:=1 to round(hatvany(2,i)) do
        begin
          arc(x+(j-1)*2*x,y,a,b,r);
        end;
   end;
 readkey;
 closegraph;
end.
